                {{ form_end(form) }}
            </div>
        </div> <!-- ./col -->


         <div class="col-lg-5 col-xl-4 order-md-first order-sm-first col-md-12 order-first col-12 col-sm-12 order-lg-7 order-xl-7 pX-30@md- pB-20@sm- right">

            <div class="breadcrumbs">
                <ul class="list-unstyled">
                    <li><a class="mR-3" href="{{ path('homepage') }}">Accueil</a> »</li>
                    <li class="active"><a href="#">Création compte</a></li>
                </ul>
            </div>
            <h4 class="mT-40">Vous avez déjà un compte?</h4>
            <div class="form-group mT-40@md+ mT-20@md-">
                <a class="signin-btn c-white">Connectez-vous</a>
            </div>
            <div class="readMoreLink mT-40@md+ mT-20md-">
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié?</a> 
            </div>
