<div class="pagination-container">
{% if pageCount > 1 %}
    <ul class="pagination float-right">

    {% if previous is defined %}
        <li class="page-item">
            <a rel="prev" class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                <i class="ti-angle-double-left"></i>
            </a>
        </li>
    {% else %}
        <li class="disabled page-item">
            <a rel="prev" class="page-link" href="#">
                <i class="ti-angle-double-left"></i>
            </a>
        </li>
    {% endif %}

    {% if startPage > 1 %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
        </li>
        {% if startPage == 3 %}
            <li class="page-item">
                <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
            </li>
        {% elseif startPage != 2 %}
        <li class="disabled page-item">
            <span>&hellip;</span>
        </li>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="#" class="active">{{ page }}</a>
            </li>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <li class="disabled page-item">
                    <span>&hellip;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                </li>
            {% endif %}
        {% endif %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        </li>
    {% endif %}

    {% if next is defined %}
        <li class="page-item">
            <a rel="next" class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                <i class="ti-angle-double-right"></i>
            </a>
        </li>
    {% else %}
        <li class="disabled page-item">
            <a rel="next" class="page-link" href="#">
                <i class="ti-angle-double-right"></i>
            </a>
        </li>
    {% endif %}
    </ul>
{% endif %}
</div>