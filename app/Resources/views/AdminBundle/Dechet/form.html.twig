{{ form_start(form) }} 
<div class="form-group">
    {{form_label(form.name)}}
    {{form_widget(form.name)}}
    {{form_errors(form.name)}} 
</div>
<div class="form-group">
    {{form_label(form.amount)}}
    {{form_widget(form.amount)}}
    {{form_errors(form.amount)}} 
    <small class="form-text text-muted">Quantité du déchet en Kg</small>

</div>

<div class="form-group file">
    {{form_label(form.dechetImage)}}
    {{form_widget(form.dechetImage)}}
    {{form_errors(form.dechetImage)}} 
    <small class="form-text text-muted">Image du dechet. Format png et jpg</small>
</div>

<div class="form-group">
    {{form_label(form.description)}}
    {{form_widget(form.description)}}
    {{form_errors(form.description)}} 
</div>


<div class="checkbox checkbox-circle checkbox-info peers ai-c mB-15">
    {{form_widget(form.enabled)}}
    {{form_label(form.enabled)}}
    {{form_errors(form.enabled)}} 
</div>

{{form_rest(form)}}
 <div class="form-group mT-10">
    <small class="form-text text-muted"><strong class="c-red-900">*</strong> champ obligatoire.</small>
    <button type="submit" class="btn btn-primary form-control mT-10">Enregistrer</button>
</div>    <!-- /.form-group -->

{{ form_end(form) }}
